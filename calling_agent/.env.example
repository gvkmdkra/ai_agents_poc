# ============================================================================
# CALLING AGENT - ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# OpenAI Configuration (Required)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ----------------------------------------------------------------------------
# Ultravox Voice AI Configuration (Required)
# ----------------------------------------------------------------------------
ULTRAVOX_API_KEY=your-ultravox-api-key-here
ULTRAVOX_API_ENDPOINT=https://api.ultravox.ai/api/calls
ULTRAVOX_VOICE_ID=your-voice-id-here
ULTRAVOX_MODEL_NAME=fixie-ai/ultravox
ULTRAVOX_DEFAULT_VOICE=Mark
ULTRAVOX_TEMPERATURE=0.2
ULTRAVOX_TOOL_TIMEOUT=15s
ULTRAVOX_HTTP_TIMEOUT=30.0

# ----------------------------------------------------------------------------
# Twilio Configuration (Required)
# ----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------------------------------------------
# Pinecone Vector Database (Optional - for RAG)
# ----------------------------------------------------------------------------
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=
PINECONE_METRIC=cosine

# ----------------------------------------------------------------------------
# Turso Database Configuration (Optional)
# ----------------------------------------------------------------------------
TURSO_DB_URL=
TURSO_DB_AUTH_TOKEN=

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=change-this-to-a-random-secret-key
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# IMPORTANT: For webhooks to work, this must be a publicly accessible URL
# For local development, use ngrok: ngrok http 8000
API_BASE_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# CORS Settings
# ----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ----------------------------------------------------------------------------
# Call Management
# ----------------------------------------------------------------------------
CALL_RECORDS_FILE_PATH=call_records.json
CALL_HISTORY_DEFAULT_LIMIT=50

# ----------------------------------------------------------------------------
# RAG Configuration (Optional)
# ----------------------------------------------------------------------------
RAG_TOP_K_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7
