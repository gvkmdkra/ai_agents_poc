# Unified AI Agent Configuration

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Unified AI Agent
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_BASE_URL=http://localhost:8000

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_TYPE=sqlite  # sqlite, postgres, turso

# SQLite (Default - works out of the box)
SQLITE_DATABASE_PATH=./data/unified_agent.db

# Turso (Optional - cloud database)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# PostgreSQL (Alternative)
POSTGRES_URL=postgresql://user:password@localhost:5432/unified_agent

# MySQL (Customer Data)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=customer_db

# SSH Tunnel (Optional)
SSH_HOST=
SSH_PORT=22
SSH_USER=
SSH_KEY_PATH=

# ============================================
# AI/LLM CONFIGURATION
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ultravox
ULTRAVOX_API_KEY=your-ultravox-api-key
ULTRAVOX_API_URL=https://api.ultravox.ai
ULTRAVOX_VOICE=lily
ULTRAVOX_MODEL=fixie-ai/ultravox-70B

# ============================================
# TELEPHONY (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# VECTOR DATABASE (Pinecone)
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=your-index-name
PINECONE_TOP_K=5

# ============================================
# CACHING (Redis)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CALLS_PER_HOUR=100
RATE_LIMIT_MAX_CONCURRENT_CALLS=10

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_VOICE_CALLING=true
ENABLE_CHAT=true
ENABLE_TEXT_TO_SQL=true
ENABLE_RAG=true
ENABLE_LEAD_CAPTURE=true
ENABLE_ANALYTICS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=text  # json or text

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
